<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#B5B5B5" />
            <solid android:color="#CCCCCCCC" />
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient android:angle="90" android:startColor="#DEDEDE" android:endColor="#F2F2F2"  />
        </shape>
    </item>
    
    <item android:id="@+id/third_image">
      <bitmap android:src="@drawable/logo_bg"
        android:gravity="right|bottom" />
    </item>

</layer-list>